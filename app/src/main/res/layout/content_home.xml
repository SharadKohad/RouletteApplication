<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    tools:showIn="@layout/app_bar_home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/new1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@color/overlay_dark_30" />

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:id="@+id/ll_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/txtmember1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="QUICK WIN"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_40sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_member_count1"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/btn_rounded_white_outline"
                    android:enabled="false"
                    android:paddingLeft="@dimen/spacing_xlarge"
                    android:text="Click Here"
                    android:paddingRight="@dimen/spacing_xlarge"
                    android:textColor="@color/textColor" />

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/new2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp"
            android:background="@color/overlay_dark_30" />

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <LinearLayout
                android:id="@+id/ll_deposit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/txtmember2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEPOSIT"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_40sdp"                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/spacing_xlarge"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/btn_rounded_white_outline"
                    android:enabled="false"
                    android:text="120"
                    android:paddingLeft="@dimen/spacing_xlarge"
                    android:paddingRight="@dimen/spacing_xlarge"
                    android:textColor="@color/textColor" />

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl">


        <ImageView
            android:id="@+id/image_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/new1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_dark_30" />

        <com.balysv.materialripple.MaterialRippleLayout
            style="@style/RippleStyleWhite"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_180sdp">

            <LinearLayout
                android:id="@+id/ll_withdraw"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/spacing_large">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WITHDRAW"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_40sdp"                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_member_count3"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/btn_rounded_white_outline"
                    android:enabled="false"
                    android:paddingLeft="@dimen/spacing_xlarge"
                    android:paddingRight="@dimen/spacing_xlarge"
                    android:text="213"
                    android:textColor="@color/textColor" />

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>


    </RelativeLayout>

</RelativeLayout>